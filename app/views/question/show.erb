<h2 class="question-title"><%= @question.title %></h2>
<p class="author-name"><%= @question.author.username %></p>
<p class="question-description"><%= @question.description %></p>
<% if @question.comments %>
  <ol class="comments">
    <% @question.comments.each do |comment| %>
      <li><%= comment.response %><span class="author-name"> - <%= comment.commenter.username %></span></li>
    <% end %>
  </ol>
    <form class= "new-comment" action= <%="/questions/#{@question.id}/comments"%> method="post">
      <input type="textarea" name='comment_text' placeholder="Enter comment here"> </input>
      <input type= "submit" class="button" value= "Submit"></input>
    </form>
<% end %>

<% if @answers %>
  <div class= "answer-box">
    <ol class="answers">
      <% @answers.each do |answer| %>
        <li class= "answer-gif" id = '<%= "answer-#{answer.id}"%>'>
          <div class="button-holder">
            <div class="vote-button upvote-button"></div>
            <div class="answer-points"><%= answer.points %></div>
            <div class="vote-button downvote-button"></div>
          </div>
          <img class="response-gif" src="<%= answer.gif %>" />
          <span class="author-name"> - <%= answer.answerer.username %></span></li>
          <ol id="answer-comment-<%=answer.id%>" class="answer-comments">
            <% if answer.comments %>
              <% answer.comments.each do |comment| %>
                <li><%= comment.response %><span class="author-name"> - <%= comment.commenter.username %></span></li>
              <% end %>
            <% end %>
      </ol>
             <form id="answer-comment-<%=answer.id%>" class= "answer-comment" action= <%="/answers/#{answer.id}/comments"%> method="post">
              <input type="textarea" name='comment_text' placeholder="Enter comment here"> </input>
              <input type= "submit" class="button" value= "Submit"></input>
            </form>
        <% end %>
    </ol>
  </div>
<% end %>


<% if logged_in? %>
<form id="answer-form" action='/questions/<%= @question.id %>/answers' method='post'>
  <textarea name='response' placeholder='Answer goes here'></textarea>
  <input type='submit' value='Submit Answer'>
</form>
<% end %>

